! URxvt configuration
!
! The urxvt options [are] mostly a subset of xterm's.
!    -- urxvt(1)

URxvt.scrollBar: false
URxvt.saveLines: 0
URxvt.internalBorder: 0
URxvt.font: xft:Ubuntu Mono:pixelsize=25
! This makes the line height match that of xterm.
URxvt.lineSpace: 1

URxvt.foreground: #dfdfdf
URxvt.background: #000000

! vim: ft=xdefaults tw=90 sts=-1 sw=3 et cms=!\ %s
