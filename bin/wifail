#!/usr/bin/env bash

# Create an i3 workspace with 7 placeholder windows that swallow xterms.
i3-msg -q 'append_layout ~/.config/i3/wifi-debug-workspace.json'

# Note: xterm's `-e` option seems to prepend `bash -c` to its argument (when necessary?);
# i.e., it starts a non-interactive shell.

# Show the output of wpa_supplicant and dhcpcd from the current boot as if they were
# running in the foreground.  See journalctl(1).
xterm -e 'sudo journalctl -fu wpa_supplicant@wlan0 --no-tail -b -o cat' &
sleep .1
xterm -e 'sudo journalctl -fu dhcpcd@wlan0 --no-tail -b -o cat' &
sleep .1

xterm -e 'watch -n 1 iw dev wlan0 link' &
sleep .1
xterm &
sleep .1
xterm -e 'watch -d -n 1 ip address show dev wlan0' &
sleep .1
xterm -e 'watch -d -n 1 route -n' &
sleep .1
xterm -e 'while true; do ping -c 8 google.com && sleep 30 && clear || sleep 1; done' &

# vim: tw=90 sts=-1 sw=3 et
