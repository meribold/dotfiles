priority -60

global !p
def modeline():
   options = "tw=90 sts=-1 sw=3 et"
   commentstring = vim.eval("&commentstring")
   if vim.eval("&ft") and commentstring:
      return commentstring.replace("%s", " vim: %s " % options).strip()
   else:
      return "vim: " + options
endglobal

snippet modeline "Vim modeline" b
`!p snip.rv = modeline()`
endsnippet

